<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="395dp"
    android:layout_height="130dp"
    android:layout_gravity="center_horizontal"
    >

    <ImageView
        android:id="@+id/img_item_meeting_list_textview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@color/colorPrimaryDark"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_item_meeting_list_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="title of meeting"
        android:layout_marginStart="16dp"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@id/img_item_meeting_list_textview"
        app:layout_constraintTop_toTopOf="@id/img_item_meeting_list_textview"
        />

    <TextView
        android:id="@+id/date_item_meeting_list_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="hour of meeting"
        android:layout_marginStart="16dp"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/title_item_meeting_list_textview"
        app:layout_constraintLeft_toRightOf="@id/img_item_meeting_list_textview"
        />

    <TextView
        android:id="@+id/hour_item_meeting_list_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="hour of meeting"
        android:layout_marginStart="16dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/img_item_meeting_list_textview"
        app:layout_constraintTop_toBottomOf="@id/title_item_meeting_list_textview"
        />

    <TextView
        android:id="@+id/participant_name_item_meeting_list_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="participant of meeting"
        android:layout_marginStart="16dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/img_item_meeting_list_textview"
        app:layout_constraintTop_toBottomOf="@id/hour_item_meeting_list_textview"
        />

    <TextView
        android:id="@+id/room_name_item_meeting_list_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="room of meeting"
        android:layout_marginStart="16dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/img_item_meeting_list_textview"
        app:layout_constraintTop_toBottomOf="@id/participant_name_item_meeting_list_textview"
        />

    <ImageView
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:src="@drawable/delete"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_item_meeting_list_textview"
        app:layout_constraintBottom_toBottomOf="@+id/img_item_meeting_list_textview"
        />



</androidx.constraintlayout.widget.ConstraintLayout>